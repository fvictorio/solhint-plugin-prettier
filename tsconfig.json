{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "outDir": "build",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["@types", "rules"]
}
