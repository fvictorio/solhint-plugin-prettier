{
  "name": "solhint-plugin-wonderland",
  "version": "0.0.1",
  "description": "DeFi Wonderland Solidity best practices Solhint plugin",
  "keywords": [
    "solhint",
    "plugin",
    "solidity",
    "wonderland"
  ],
  "license": "MIT",
  "author": "DeFi Wonderland",
  "main": "index.js",
  "files": [
    "rules"
  ],
  "scripts": {
