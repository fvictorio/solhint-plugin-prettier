    "assert": "2.0.0",
    "coveralls": "3.1.1",
    "eslint": "8.31.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "markdown-table": "2.0.0",
    "mocha": "10.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "shelljs": "0.8.5",
    "sort-package-json": "1.50.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
